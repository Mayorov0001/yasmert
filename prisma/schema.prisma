generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Author {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  books Book[]
}

model Book {
  id        Int      @id @default(autoincrement())
  name      String
  desc      String
  price     Float
  img       String
  author_id Int
  author    Author   @relation(fields: [author_id], references: [id])
  reviews   Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  text      String
  rating    Int
  bookId    Int
  book      Book     @relation(fields: [bookId], references: [id])
  createdAt DateTime @default(now())

  // @@index([bookId])
}
